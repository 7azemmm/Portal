@model Student

@{
    ViewBag.Title = "Update Student";
}

<h2>Update Student</h2>

@if (Model != null)
{
<form asp-action="update_Stud" asp-controller="Student" method="post">

    <input name="Id" value="@Model.Id" hidden />
    <div class="form-group">
        <label for="StudentName">Name:</label>
        <input type="text" id="StudentName" name="Name" class="form-control" value="@Model.Name" required />
    </div>

   

    <div class="form-group">
        <label for="StudentEmail">stundet Phone Number</label>
        <input type="texr" id="StudentEmail" name="Stud_Phone_number" class="form-control" value="@Model.Stud_Phone_number" required />
    </div>

    <div class="form-group">
        <label for="StudentEmail">parent phone number:</label>
        <input type="text" id="StudentEmail" name="Stud_Parent_Phone_number" class="form-control" value="@Model.Stud_Parent_Phone_number" required />
    </div>

    <div class="form-group">
        <label for="GroupId">Group:</label>
        <select id="GroupId" name="GroupId" class="form-control" required>
            <option value="">-- Select Group --</option>
            @foreach (var group in ViewBag.groups as List<Group>)
                {
                   @if(group.Id == Model.groupId){
                    <option value="@group.Id" selected> @group.Name</option>
                   }else{
                     <option value="@group.Id" selected> @group.Name</option>
                   }
                }
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Student</button>
        <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
}
else
{
<p>Student not found!</p>
}
